# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Required: OpenAI API Key for movie recommendations
OPENAI_API_KEY=your_openai_api_key_here

# Optional: OpenAI Model to use (default: gpt-4o)
# Options: gpt-4o, gpt-4, gpt-3.5-turbo, etc.
OPENAI_MODEL=gpt-4o

# Optional: Flask secret key for session management
# Generate a random secret key for production use
SECRET_KEY=your-very-secure-secret-key-here

# Optional: Database URL (default: conversations.db)
# For SQLite: conversations.db
# For PostgreSQL: postgresql://user:password@localhost/dbname
DATABASE_URL=conversations.db

# Optional: Debug mode (default: False)
# Set to True only for development
DEBUG=False

# Optional: Port for the application (default: 5000)
PORT=5000